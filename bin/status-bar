#!/usr/bin/env nix-shell
#! nix-shell -i /bin/sh -p lemonbar aumix

clock() {
    date '+%Y-%m-%d %H:%M'
}

volume() {
    amixer get Master | sed -n '4N;s/^.*\[\([0-9]\+%\).*$/\1/p'
}

format() {
    while :; do
        echo "%{r}%{A4:vol-up:}%{A5:vol-down:}$(volume)%{A}%{A}  $(clock) "
        sleep 1
    done
}

parse() {
    while read cmd
    do
        case "$cmd" in
            vol-up)
                aumix -v+5
                ;;
            vol-down)
                aumix -v-5
                ;;
        esac
    done
}

format | lemonbar -p -B\#113461 -F\#c9c7d4 | parse
